= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
  = render "devise/shared/error_messages", resource: resource
  .all
    .data
      .gaiyou ログイン画面

      .nyuuryokuform
        .email
          .email_label
            = f.label :emailアドレスを入力してください
            %span.form-require 必須
          .email_field
            = f.email_field :email, autofocus: true, autocomplete: "email" , :placeholder => "PC携帯どちらもOK!", class:'text-region'
        .password
          .password_label
            = f.label :パスワードを入力してください
            %span.form-require 必須
          .password_field
            = f.password_field :password, autocomplete: "new-password", :placeholder => "半角英数字7文字以上", class:'text-region'
        - if devise_mapping.rememberable?
          .field
            = f.check_box :remember_me
            = f.label :ログインしたままにする
        .actions
          = f.submit "ログイン", class:'rogin-btn'
      .acount_sakusei 
        %a.btn-default.btn-mail{:href => "/users/sign_up"}
          アカウントをお持ちでない方はこちらから

  .fixedButton
    %p 出品する
    .fixedButton__image
      = link_to '#' do
        =image_tag('icon/icon_camera.png', alt: "出品ボタン")