%link{:href => "_new_sinkikaiin.scss", :rel => "stylesheet"}/
= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
  = render "devise/shared/error_messages", resource: resource
  .all
    .data
      .gaiyou 会員情報登録
      .nickname
        .field_label
          = f.label :ニックネームを入力してください
          %span.form-require 必須
        .nyuryoku_field
          = f.text_field :nickname, :placeholder => "例) フリマー", class:'text_region'
      .email
        .field_label
          = f.label :emailアドレスを入力してください
          %span.form-require 必須
        .nyuryoku_field
          = f.email_field :email, autofocus: true, autocomplete: "email" , :placeholder => "PC携帯どちらもOK!", class:'text_region'
      .password
        .field_label
          = f.label :パスワードを入力してください
          %span.form-require 必須
          - if @minimum_password_length
            %em
        .nyuryoku_field
          = f.password_field :password, autocomplete: "new-password", :placeholder => "半角英数字7文字以上", class:'text_region'
        .field_label
          = f.label :パスワードを再入力してください
          %span.form-require 必須
        .nyuryoku_field
          = f.password_field :password_confirmation, autocomplete: "new-password", :placeholder => "パスワード確認用", class:'text_region'
      .name
        .namefield_kanji
          = f.label :お名前（漢字）を入力してください
          %span.form-require 必須
        .namefield_kanjifield
          = f.text_field :family_name_kanji, :placeholder => "例) 山田", class:'name_region'
          = f.text_field :first_name_kanji, :placeholder => "例) 花子", class:'name_region'
        .namefield_kana
          = f.label :お名前（かな）を入力してください
          %span.form-require 必須
        .namefield_kanafield
          = f.text_field :family_name_kana, :placeholder => "例) やまだ", class:'name_region'
          = f.text_field :first_name_kana, :placeholder => "例) はなこ", class:'name_region'
            
        .honnin 
          %span 安心・安全にご利用いただくために、お客さまの本人情報の登録にご協力ください。他のお客さまに公開されることはありません。
      .birth
        .birthfield_label
          = f.label :あなたのお誕生日を選択してください
          %span.form-require 必須
        .sentaku_field
          = f.date_select :birthday, class:'text_region'

      .actions
        .tugihesusumu_button
          %a(href="app/views/items/new.html.haml")
            = f.submit "次へ進む", class:'tugiesusumu'
          
  .fixedButton
    %p 出品する
    .fixedButton__image
      = link_to '#' do
        =image_tag('icon/icon_camera.png', alt: "出品ボタン")