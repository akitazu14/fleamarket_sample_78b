
%link{:href => "“new_sinkikaiin.scss”", :rel => "“stylesheet”"}/
= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
  = render "devise/shared/error_messages", resource: resource
  .all
    .Rogo-header
      %h1
        %img{:alt => "FURIMA", :src => "/fleamarket_sample_78b/app/assets/images/FURIMAロゴ 最終課題用.jpg"}/
    .header 会員情報登録
    .data
      .nickname
        .field
          = f.label :ニックネームを入力してください
          %br/
          = f.text_field :nickname, :placeholder => "例) フリマー"
          %br/
      .email
        .field
          = f.label :emailアドレスを入力してください
          %br/
          = f.email_field :email, autofocus: true, autocomplete: "email" , :placeholder => "PC携帯どちらもOK!"
      .password
        .field
          = f.label :パスワードを入力してください
          - if @minimum_password_length
            %em
              (#{@minimum_password_length} characters minimum)
          %br/
          = f.password_field :password, autocomplete: "new-password", :placeholder => "半角英数字7文字以上"
        .field
          = f.label :パスワードを再入力してください
          %br/
          = f.password_field :password_confirmation, autocomplete: "new-password", :placeholder => "パスワード確認用"
      .name
        .namefield_kanji
          = f.label :お名前（漢字）を入力してください
          .namefield_kanjifield
            = f.text_field :family_name_kanji, :placeholder => "例) 山田"
            = f.text_field :first_name_kanji, :placeholder => "例) 花子"
        .namefield_kana
          = f.label :お名前（カナ）を入力してください
          .namefield_kanafield
            = f.text_field :family_name_kana, :placeholder => "例) ヤマダ"
            = f.text_field :first_name_kana, :placeholder => "例) ハナコ"
            %br/
        .honnin 
          %span 安心・安全にご利用いただくために、お客さまの本人情報の登録にご協力ください。他のお客さまに公開されることはありません。
      .birth
        .birth_text ご自身の生年月日を選択してください
        .birhtday
          .birth_fields
            .nen
              = f.label :年
            .tuki
              = f.label :月
            .hi
              = f.label :日
              .birth_field
                = f.number_field :birth_year_id, :placeholder => "選択してください"
                = f.number_field :birth_month_id, :placeholder => "選択してください"
                = f.number_field :birth_day_id, :placeholder => "選択してください"
      .actions
        = f.submit "登録"
= render "devise/shared/links"
