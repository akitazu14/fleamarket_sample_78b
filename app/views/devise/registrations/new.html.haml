= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
  = render "devise/shared/error_messages", resource: resource
  .all
    .data
      .gaiyou 会員情報登録

      .nyuuryokuform

        .nickname
          .nickname__label
            = f.label :ニックネームを入力してください
            %span.form__require 必須
          .nickname__field
            = f.text_field :nickname, :placeholder => "例) フリマー", class:'text__region'

        .email
          .email__label
            = f.label :emailアドレスを入力してください
            %span.form__require 必須
          .email__field
            = f.email_field :email, autofocus: true, autocomplete: "email" , :placeholder => "PC携帯どちらもOK!", class:'text__region'

        .password
          .password__label
            = f.label :パスワードを入力してください
            %span.form__require 必須
            - if @minimum_password_length
              %em
          .password__field
            = f.password_field :password, autocomplete: "new-password", :placeholder => "半角英数字7文字以上", class:'text__region'
          .password__sai__label
            = f.label :パスワードを再入力してください
            %span.form__require 必須
          .password__sai__field
            = f.password_field :password_confirmation, autocomplete: "new-password", :placeholder => "パスワード確認用", class:'text__region'

        .name__kanji
          .name__kanji__label
            = f.label :お名前（漢字）を入力してください
            %span.form__require 必須
          .name__kanji__field
            = f.text_field :family_name_kanji, :placeholder => "例) 山田", class:'name__region'
            = f.text_field :first_name_kanji, :placeholder => "例) 花子", class:'name__region'

        .name__kana
          .name__kana__label
            = f.label :お名前（かな）を入力してください
            %span.form__require 必須
          .name_kana__field
            = f.text_field :family_name_kana, :placeholder => "例) やまだ", class:'name__region'
            = f.text_field :first_name_kana, :placeholder => "例) はなこ", class:'name__region'
              
        .honnin 
          .ansin
            .ansin__text 安心・安全にご利用いただくために、お客さまの本人情報の登録にご協力ください。他のお客さまに公開されることはありません。

        .birth
          .birth__label
            = f.label :あなたのお誕生日を選択してください
            %span.form-require 必須
          .birth__sentaku__field
            = f.date_select :birthday, class:'text__region'

      .actions
        .tugihesusumu__button
          %a(href="app/views/items/new.html.haml")
            = f.submit "次へ進む", class:'tugiesusumu'
          
  .fixedButton
    %p 出品する
    .fixedButton__image
      = link_to '#' do
        =image_tag('icon/icon_camera.png', alt: "出品ボタン")