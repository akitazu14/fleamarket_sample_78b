%link{:href => "_new_address.scss", :rel => "stylesheet"}/
= form_for(@send) do |f|
  = render "devise/shared/error_messages", resource: @send
  .all
    .data
      .gaiyou お届け先ご住所登録
      .nyuuryokuform
        .name_kanji
          .name_kanji_label
            = f.label :お名前（漢字）を入力してください
            %span.form-require 必須
          .name_kanji_field
            = f.text_field :family_name_kanji, :placeholder => "例) 山田", class:'name_region'
            = f.text_field :first_name_kanji, :placeholder => "例) 花子", class:'name_region'
        .name_kana
          .name_kana_label
            = f.label :お名前（カナ）を入力してください
            %span.form-require 必須
          .name_kana_field
            = f.text_field :family_name_kana, :placeholder => "例) ヤマダ", class:'name_region'
            = f.text_field :first_name_kana, :placeholder => "例) ハナコ", class:'name_region'
        .yuubinbangou
          .yuubinbangou_label
            = f.label :郵便番号を入力してください
            %span.form-require 必須
          .yuubinbangou_field
            = f.text_field :postcode, :placeholder => "例) 000-0000", class:'postcode'
        .todouhuken
          .todouhuken_label
            = f.label :都道府県を選択してください
            %span.form-require 必須
          .todouhuken_field
            = f.collection_select(:prefecture_id, Prefecture.all, :id, :name, {}, {class: 'todouhuken_sentaku'})
        .sityouson
          .sityouson_label
            = f.label :市町村を入力してください
            %span.form-require 必須
          .sityouson_field
            = f.text_field :city, :placeholder => "例) oo市xx区", class:'city'
        .banti
          .banti_label
            = f.label :番地を入力してください
            %span.form-require 必須
          .banti_field
            = f.text_field :block, :placeholder => "例) yy丁目zz番地", class:'block'
        .heyabangou
          .heyabangou_label
            = f.label :マンション、アパート名、部屋番号を入力してください
            %br
            %span.form-require マンション等にお住まいの方は必須
          .heyabangou_field
            = f.text_field :building, :placeholder => "例) フリマコーポA棟", class:'building'
            = f.text_field :building, :placeholder => "例) 205号室", class:'building'
        .denwabangou
          .denwabangou_label
            = f.label :お電話番号を入力してください
            %span.form-require 必須
          .denwabangou_field
            = f.text_field :tel, :placeholder => "固定、携帯どちらも可", class:'tel'
      .actions
        .touroku_btm
          %a(href="app/views/devise/registrations/create_address.html.haml")
            = f.submit "登録する", class:'tourokusuru'

  .fixedButton
    %p 出品する
    .fixedButton__image
      = link_to '#' do
        =image_tag('icon/icon_camera.png', alt: "出品ボタン")

= render "devise/shared/links"