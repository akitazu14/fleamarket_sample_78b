= form_for(@address) do |f|
  = render "devise/shared/error_messages", resource: @address
  .all
    .data
      .gaiyou お届け先ご住所登録
      .nyuuryokuform
        .name__kanji
          .name__kanji__label
            = f.label :お名前（漢字）を入力してください
            %span.form__require 必須
          .name__kanji__field
            = f.text_field :family_name_kanji, :placeholder => "例) 山田", class:'name__region'
            = f.text_field :first_name_kanji, :placeholder => "例) 花子", class:'name__region'
        .name__kana
          .name__kana__label
            = f.label :お名前（かな）を入力してください
            %span.form__require 必須
          .name__kana__field
            = f.text_field :family_name_kana, :placeholder => "例) やまだ", class:'name__region'
            = f.text_field :first_name_kana, :placeholder => "例) はなこ", class:'name__region'
        .yuubinbangou
          .yuubinbangou__label
            = f.label :郵便番号を入力してください
            %span.form__require 必須
          .yuubinbangou__field
            = f.text_field :postcode, :placeholder => "例) 000-0000", class:'postcode'
        .todouhuken
          .todouhuken__label
            = f.label :都道府県を選択してください
            %span.form__require 必須
          .todouhuken__field
            = f.collection_select(:prefecture_id, Prefecture.all, :id, :name, {}, {class: 'todouhuken__sentaku'})
        .sityouson
          .sityouson__label
            = f.label :市町村を入力してください
            %span.form__require 必須
          .sityouson__field
            = f.text_field :city, :placeholder => "例) oo市xx区", class:'city'
        .banti
          .banti__label
            = f.label :番地を入力してください
            %span.form__require 必須
          .banti__field
            = f.text_field :block, :placeholder => "例) yy丁目zz番地", class:'block'
        .heyabangou
          .heyabangou__label
            = f.label :マンション、アパート名、部屋番号を入力してください
            %br
            %span.form__require マンション等にお住まいの方は必須
          .heyabangou__field
            = f.text_field :building, :placeholder => "例) フリマコーポA棟", class:'building'
            = f.text_field :building, :placeholder => "例) 205号室", class:'building'
        .denwabangou
          .denwabangou__label
            = f.label :お電話番号を入力してください
            %span.form__require 必須
          .denwabangou__field
            = f.text_field :tel, :placeholder => "固定、携帯どちらも可", class:'tel'
      .actions
        .touroku__btm
          %a(href="app/views/devise/registrations/create_address.html.haml")
            = f.submit "登録する", class:'tourokusuru'

  .fixedButton
    %p 出品する
    .fixedButton__image
      = link_to '#' do
        =image_tag('icon/icon_camera.png', alt: "出品ボタン")