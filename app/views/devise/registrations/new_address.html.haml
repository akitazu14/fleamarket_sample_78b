%h2 送付先住所登録ページ
= form_for(@send) do |f|
  = render "devise/shared/error_messages", resource: @send
  .field
    = f.label :family_name_kanji
    %br/
    = f.text_field :family_name_kanji
  .field
    = f.label :first_name_kanji
    %br/
    = f.text_field :first_name_kanji
  .field
    = f.label :family_name_kana
    %br/
    = f.text_field :family_name_kana
  .field
    = f.label :first_name_kana
    %br/
    = f.text_field :first_name_kana
  .field
    = f.label :postcode
    %br/
    = f.text_field :postcode
  .field
    = f.label :prefecture_id
    %br/
    = f.collection_select(:prefecture_id, Prefecture.all, :id, :name)
  .field
    = f.label :city
    %br/
    = f.text_field :city
  .field
    = f.label :block
    %br/
    = f.text_field :block
  .field
    = f.label :building
    %br/
    = f.text_field :building
  .field
    = f.label :tel
    %br/
    = f.text_field :tel
  .actions
    = f.submit "登録する"

= render "devise/shared/links"