- @nobrandItems.first(5).each do |item|
  - if user_signed_in? && item.user_id == current_user.id
    = link_to edit_item_path(item.id) do
      .lists__product
        = image_tag item.item_images[0].src.url
        .product__detail
          %h3.product__detail--name
            = item.product_name
          %ul
            -if item.purchase == nil
              %li.product__detail--price 
                = item.price
                円
                .product__detail--tax
                (税込)
            -else
              .SoldOut SOLD OUT
  - else
    = link_to item_path(item.id) do
      .lists__product
        = image_tag item.item_images[0].src.url
        .product__detail
          %h3.product__detail--name
            = item.product_name
          %ul
            -if item.purchase == nil
              %li.product__detail--price 
                = item.price
                円
                .product__detail--tax
                (税込)
            -else
              .SoldOut SOLD OUT

