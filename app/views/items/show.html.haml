.page
  .page__content
    .item
      .item__content
        %h2.item__content--subtitle
          テスト
        .item__content--image
          .image__big
            =image_tag('pict/fashion_fishing_vest')
          %ul
            %li.image__small
              =image_tag('pict/fashion_fishing_vest')
        .item__content--price
          ￥10000
        %p (税込)送料込み
        .item__content--description
          テストテストテストテストテストテストテスト
        .item__content--table
          %table
            %tr 
              %th 出品者
              %td aaa
            %tr 
              %th カテゴリー
              %td.colorBlue
                レディース
                %br/
                トップス
                %br/
                Tシャツ/カットソー(半袖/袖なし)
            %tr
              %th ブランド
              %td 
            %tr
              %th 商品のサイズ
              %td 
            %tr
              %th 商品の状態
              %td 新品/未使用
            %tr
              %th 配送料の負担
              %td 送料込み（出品者負担）
            %tr
              %th 発送元の地域
              %td.colorBlue 北海道
            %tr
              %th 発送日の目安
              %td 1~2日で発送

        .item__buttons
          .item__buttons--likeButton
            = link_to '#' do
              <i class="far fa-heart"></i> お気に入り
          .item__buttons--reportButton
            %a(href="#")
              <i class="fas fa-flag"></i>
              不適切な商品の通報
        .item__content--purchaseButton
          -if @purchase.blank?
            = link_to '購入画面に進む', new_item_purchase_path(@item.id), class: 'GoToPurchase'
          -else
            .SoldOut SOLD OUT
      .item__comment
        = form_with url: "#" do |form|
          = form.text_area :email
          %p
            相手のことを考え丁寧なコメントを心がけましょう。
            %br 不快な言葉遣いなどは利用制限や退会処分となることがあります。
          = button_tag type: 'submit' do
            = link_to '#' do
              <i class="fas fa-comment"></i> コメントする
        
      .item__select
        .item__select--previousButton
          = link_to '#' do
            < 前の商品
        .item__select--nextButton
          = link_to '#' do
            次の商品 >

      .item__recommend
        .item__recommend--subtitle
          %h2 レディースをもっと見る
        .lists
          .lists__product
            =image_tag('pict/cleanroom_boujinfuku.png', alt: "商品1")
            .product__detail
              %h3.product__detail--name
                テスト
              %ul
                %li.product__detail--price 
                  1000円
                %li.product__detail--likeButton
                  = link_to '#' do
                    <i class="far fa-heart"></i> 1
              .product__detail--tax
                (税込)
.fixedButton
  %p 出品する
  .fixedButton__image
    = link_to '#' do
      =image_tag('icon/icon_camera.png', alt: "出品ボタン")